<!DOCTYPE HTML>
<html lang = "ru">
<head>
	<meta charset = "UTF-8">
</head>
<body>
	<h1>Введите количество файлов txt</h1>
	<form action="" method="post" class="text">
		<input type="text" name="sum_files" class="numbers">
	</form>
</body>
</html>

<?php

	$permitted_chars = 'abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ';
	$sum_files = $_POST['sum_files'] ?? null;
	
	if ($sum_files == null) {
		exit;
	}

	for ($i = 1; $i <= $sum_files; $i++) { 
	
		$file_name = substr(str_shuffle($permitted_chars), 0 , 10) . $i;
		$file_text = $file_name;
		file_put_contents($file_name . '.txt', $file_text);
		
		if (( $i % 2 ) == 0 ) {
			unlink($file_name . '.txt');
			$deleted_files[ ($i-1) ] = $file_name;
		}

	}
foreach ($deleted_files as $i => $deleted_files) {
	echo $deleted_files . "<br>\n";
}
