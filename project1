<?php 
if ($_POST['submit'])
{
	$number1 = (int)$_POST['number1'];
	$number2 = (int)$_POST['number2'];
	$operation = $_POST['operation'];
	$result;
    if ($operation == '+')
		$result = $number1 + $number2;
	else if ($operation == '-')
		$result = $number1 - $number2;
	else if ($operation == '*')
	  	$result = $number1 * $number2;
	else if ($operation == '/')
	{
		if ($number2==0)
			echo 'Деление на ноль невозможно';
		else $result = $number1 / $number2;
	}
}
?>
<!DOCTYPE HTML>
<html lang = "ru">
<head>
	<meta charset = "UTF-8">
</head>
<body>
	<h1>Калькулятор</h1>
	<form action="" method="post" class="calculate-form">
		<input type="text" name="number1" class="numbers">
		<select class="operations" name="operation">
			<option value='+'>+ </option>
			<option value='-'>- </option>
			<option value='*'>* </option>
			<option value='/'>/ </option>
		</select>
		<input type="text" name="number2" class="numbers">

		<input class="submit_form" type="submit" name="submit" value="Рассчитай">
	</form>
</body>
</html>

<?php 
echo "$number1 $operation $number2\n 
Результат: $result";
?>
