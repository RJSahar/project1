<!DOCTYPE HTML>
<html lang = "ru">
<head>
	<meta charset = "UTF-8">
</head>
<body>
	<h1>Введите количество файлов txt</h1>
	<form action="" method="post" class="text">
		<input type="text" name="sum_files" class="numbers">
	</form>
</body>
</html>

<?php

	$permitted_chars = 'abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ';
	$sum_files = $_POST['sum_files'];
	
	for ($i = 1; $i <= $sum_files; $i++) { 
	
		$filename = substr(str_shuffle($permitted_chars), 0 , 10) . $i;
		$filetext = $filename;
		file_put_contents($filename . '.txt', $filetext);

	}

?>
